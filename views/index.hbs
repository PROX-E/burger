<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="panel panel-primary">
      <div class="panel-heading">Burgers to devour</div>
        <div class="panel-body">
          {{#each toEat}}
          <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
              <label for="devoured"><h4><span class="label label-warning">{{this.burger_name}}</span></h4></label>
              <input type="hidden" name="devoured" value="1">
            </div>
            <button class="btn btn-xs btn-primary" type="submit">Devour it!</button>
          </form>
          {{/each}}
        </div>
      </div>
    </div>
